# OpenCure Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# NETWORK RPC URLs
# ===========================================

# Sepolia Testnet (get free key from Alchemy or Infura)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR-API-KEY

# Ethereum Mainnet (REQUIRED for mainnet deployment)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR-API-KEY

# Optional: Alternative networks
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR-API-KEY
BASE_RPC_URL=https://mainnet.base.org

# ===========================================
# WALLET
# ===========================================

# Your wallet private key (WITHOUT 0x prefix)
# WARNING: Never commit this file with real keys!
PRIVATE_KEY=your_private_key_here

# ===========================================
# CONTRACT VERIFICATION
# ===========================================

# Etherscan API key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key

# Optional: Other block explorers
POLYGONSCAN_API_KEY=your_polygonscan_api_key
BASESCAN_API_KEY=your_basescan_api_key

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Scientist address (who receives milestone funds)
SCIENTIST_ADDRESS=0x...

# Project name
PROJECT_NAME=DMD Gene Therapy Research

# Funding goal in USDC (without decimals)
GOAL_AMOUNT=100000

# Set to "true" to confirm mainnet deployment
CONFIRM_DEPLOY=false

# ===========================================
# GAS REPORTING (optional)
# ===========================================

REPORT_GAS=true
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
