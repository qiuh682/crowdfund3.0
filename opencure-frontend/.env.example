# OpenCure Frontend Environment Configuration
# Copy this file to .env.local and fill in your values

# ===========================================
# NETWORK CONFIGURATION
# ===========================================

# Set to 'mainnet' for production, 'sepolia' for testing
REACT_APP_NETWORK=sepolia

# ===========================================
# CONTRACT ADDRESSES
# ===========================================

# Escrow Contract Address
REACT_APP_ESCROW_ADDRESS=0x...

# USDC Token Address
# Sepolia: 0x8410f9Cf462C4dCc9Fb97971fe65F8D711Fa3F96
# Mainnet: 0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48
REACT_APP_USDC_ADDRESS=0x...

# ===========================================
# RPC CONFIGURATION (optional)
# ===========================================

# Custom RPC URL (if not using default)
REACT_APP_RPC_URL=

# ===========================================
# ANALYTICS (optional)
# ===========================================

# Google Analytics
REACT_APP_GA_ID=

# ===========================================
# FEATURES
# ===========================================

# Enable test features (faucet, etc.)
REACT_APP_ENABLE_TESTNET_FEATURES=true
